    <script>
        // REPLACE THIS URL WITH YOUR GOOGLE APPS SCRIPT WEB APP URL
        const SCRIPT_URL = 'https://script.google.com/a/macros/sparkno9.com/s/AKfycbwMjsQm22YM5xuBfQ8Krl2xajYWQclrQtEE9liDu0oCIIrJ6wl0OglOHg5VBNVNe2Ho9A/exec';

        const cardDesigns = [
            {
                id: 1,
                title: "The Experimenter",
                preview: "Let's test the hypothesis: You + Me = Success",
                gradientClass: "brand-gradient-1",
                icon: "ðŸ”¬"
            },
            {
                id: 2,
                title: "The Data-Driven",
                preview: "Real-world evidence shows: You're amazing",
                gradientClass: "brand-gradient-2",
                icon: "ðŸ“Š"
            },
            {
                id: 3,
                title: "The Validator",
                preview: "Validated: You spark joy",
                gradientClass: "brand-gradient-3",
                icon: "âœ“"
            },
            {
                id: 4,
                title: "The Rapid Response",
                preview: "No A/B testing neededâ€”you're the best",
                gradientClass: "brand-gradient-4",
                icon: "âš¡"
            },
            {
                id: 5,
                title: "The Strategist",
                preview: "Our collaboration = Winning strategy",
                gradientClass: "brand-gradient-5",
                icon: "ðŸŽ¯"
            },
            {
                id: 6,
                title: "The Classic",
                preview: "Happy Valentine's Day, teammate!",
                gradientClass: "brand-gradient-6",
                icon: "ðŸ’"
            }
        ];

        let selectedCard = null;

        // Load all cards from Google Sheets
        async function loadAllCards() {
            try {
                const response = await fetch(SCRIPT_URL + '?action=getCards');
                const data = await response.json();
                return data.cards || [];
            } catch (error) {
                console.error('Error loading cards:', error);
                return [];
            }
        }

        // Save a card to Google Sheets
        async function saveCard(card) {
            try {
                const response = await fetch(SCRIPT_URL, {
                    method: 'POST',
                    mode: 'no-cors',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        action: 'addCard',
                        card: card
                    })
                });
                return true;
            } catch (error) {
                console.error('Error saving card:', error);
                return false;
            }
        }

        // Render card selection grid
        const cardGrid = document.getElementById('cardGrid');
        cardDesigns.forEach(card => {
            const button = document.createElement('button');
            button.className = `p-6 rounded-xl transition-all hover:scale-105 ${card.gradientClass} text-white shadow-lg`;
            button.innerHTML = `
                <div class="text-4xl mb-3">${card.icon}</div>
                <h3 class="font-bold mb-2 text-sm">${card.title}</h3>
                <p class="text-xs opacity-90 leading-relaxed">${card.preview}</p>
            `;
            button.onclick = () => selectCard(card.id, button);
            cardGrid.appendChild(button);
        });

        function selectCard(id, buttonElement) {
            selectedCard = id;
            document.querySelectorAll('#cardGrid button').forEach(btn => {
                btn.classList.remove('ring-4', 'brand-border', 'scale-105');
                btn.classList.add('hover:scale-105');
            });
            buttonElement.classList.add('ring-4', 'brand-border', 'scale-105');
            buttonElement.classList.remove('hover:scale-105');
            updatePreview();
            validateForm();
        }

        function updatePreview() {
            const previewCard = document.getElementById('previewCard');
            const previewContent = document.getElementById('previewContent');
            const sender = document.getElementById('sender').value;
            const recipient = document.getElementById('recipient').value;
            const message = document.getElementById('message').value;

            if (!selectedCard) {
                previewCard.classList.add('hidden');
                return;
            }

            const card = cardDesigns.find(c => c.id === selectedCard);
            previewCard.classList.remove('hidden');
            
            let messageHTML = '';
            if (message) {
                messageHTML = `
                    <div class="bg-white/20 backdrop-blur-sm rounded p-3 mt-4">
                        <p class="text-sm italic">"${message}"</p>
                    </div>
                `;
            }

            let fromToHTML = '';
            if (sender || recipient) {
                const parts = [];
                if (sender) parts.push(`From: ${sender}`);
                if (recipient) parts.push(`To: ${recipient}`);
                fromToHTML = `<div class="mt-4 text-xs opacity-75">${parts.join(' â†’ ')}</div>`;
            }

            previewContent.innerHTML = `
                <div class="p-6 rounded-lg ${card.gradientClass} text-white">
                    <div class="text-3xl mb-3">${card.icon}</div>
                    <p class="text-sm opacity-90 mb-4">${card.preview}</p>
                    ${messageHTML}
                    ${fromToHTML}
                </div>
            `;
        }

        function validateForm() {
            const sender = document.getElementById('sender').value;
            const recipient = document.getElementById('recipient').value;
            const message = document.getElementById('message').value;
            const sendButton = document.getElementById('sendButton');
            
            sendButton.disabled = !(selectedCard && sender && recipient && message);
        }

        async function sendCard() {
            const sender = document.getElementById('sender').value;
            const recipient = document.getElementById('recipient').value;
            const message = document.getElementById('message').value;
            
            if (!selectedCard || !sender || !recipient || !message) return;

            const card = cardDesigns.find(c => c.id === selectedCard);
            const newCard = {
                id: Date.now(),
                designId: card.id,
                designTitle: card.title,
                designIcon: card.icon,
                designGradient: card.gradientClass,
                sender,
                recipient,
                message,
                timestamp: new Date().toISOString()
            };

            const saved = await saveCard(newCard);
            
            if (saved) {
                // Show success message
                const successMsg = document.getElementById('successMessage');
                successMsg.classList.remove('hidden');
                setTimeout(() => successMsg.classList.add('hidden'), 3000);

                // Reset form
                document.getElementById('sender').value = '';
                document.getElementById('recipient').value = '';
                document.getElementById('message').value = '';
                selectedCard = null;
                document.querySelectorAll('#cardGrid button').forEach(btn => {
                    btn.classList.remove('ring-4', 'brand-border', 'scale-105');
                    btn.classList.add('hover:scale-105');
                });
                document.getElementById('previewCard').classList.add('hidden');

                // Wait a moment then refresh the wall
                setTimeout(async () => {
                    await renderWall();
                }, 1000);
                
                validateForm();
            } else {
                const errorMsg = document.getElementById('errorMessage');
                errorMsg.classList.remove('hidden');
                setTimeout(() => errorMsg.classList.add('hidden'), 3000);
            }
        }

        async function renderWall() {
            const wall = document.getElementById('valentinesWall');
            const count = document.getElementById('wallCardCount');
            const allCards = await loadAllCards();

            count.textContent = allCards.length;

            if (allCards.length === 0) {
                wall.innerHTML = `
                    <div class="col-span-full text-center py-12 text-gray-400">
                        <svg class="w-16 h-16 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                        </svg>
                        <p class="text-lg">No cards yet. Be the first to spread some love!</p>
                    </div>
                `;
                return;
            }
            
            wall.innerHTML = allCards.map(card => `
                <div class="p-6 rounded-xl ${card.designGradient} text-white shadow-lg fade-in hover:scale-105 transition-transform">
                    <div class="text-3xl mb-3">${card.designIcon}</div>
                    <h3 class="font-bold mb-2">${card.designTitle}</h3>
                    <div class="bg-white/20 backdrop-blur-sm rounded p-3 mb-3">
                        <p class="text-sm italic">"${card.message}"</p>
                    </div>
                    <div class="text-xs opacity-75">
                        <div>From: ${card.sender}</div>
                        <div>To: ${card.recipient}</div>
                    </div>
                </div>
            `).join('');
        }

        // Event listeners
        document.getElementById('sender').addEventListener('input', () => {
            updatePreview();
            validateForm();
        });
        document.getElementById('recipient').addEventListener('input', () => {
            updatePreview();
            validateForm();
        });
        document.getElementById('message').addEventListener('input', () => {
            updatePreview();
            validateForm();
        });
        document.getElementById('sendButton').addEventListener('click', sendCard);

        // Initial render
        (async function() {
            await renderWall();
            document.getElementById('loadingMessage').classList.add('hidden');
        })();

        // Refresh cards every 30 seconds
        setInterval(renderWall, 30000);
    </script>
</body>
</html>
